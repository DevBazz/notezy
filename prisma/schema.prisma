generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(cuid())
  clerkId String
  username String
  name String?
  image String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // realtions

  // notes Note[]
